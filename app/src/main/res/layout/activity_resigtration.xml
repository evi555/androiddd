<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrationActivity" >

    <TextView
        android:id="@+id/textViewRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Registration form"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lnrRegistration1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_shape"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/textViewRegistration"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/imageViewRegistrationEmail"
            android:layout_width="50dp"
            android:background="@drawable/image_shape"
            android:layout_height="40dp"
            android:padding="12dp"
            app:srcCompat="@drawable/email1" />

        <EditText
            android:padding="10dp"
            android:background="@color/white"
            android:id="@+id/editTextRegistrationEmail"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:hint="Enter email"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrRegistration2"
            android:layout_below="@+id/lnrRegistration1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageViewRegistrationPassword"
                android:layout_width="50dp"
                android:background="@drawable/image_shape"
                android:layout_height="40dp"
                android:padding="12dp"
                app:srcCompat="@drawable/key1"
                />

            <EditText
                android:id="@+id/editTextRegistrationPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:inputType="textPassword"
                android:hint="Enter password"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrRegistration3"
            android:layout_below="@+id/lnrRegistration2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageViewRegistrationConfirmPassword"
                android:layout_width="50dp"
                android:background="@drawable/image_shape"
                android:layout_height="40dp"
                android:padding="12dp"
                app:srcCompat="@drawable/key1"
                />

            <EditText
                android:id="@+id/editTextRegistrationConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:inputType="textPassword"
                android:hint="Verify password"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrRegistration4"
            android:layout_below="@+id/lnrRegistration3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageViewRegistrationUser"
                android:layout_width="50dp"
                android:background="@drawable/image_shape"
                android:layout_height="40dp"
                android:padding="12dp"
                app:srcCompat="@drawable/user"
                />

            <EditText
                android:id="@+id/editTextRegistrationUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:inputType="text"
                android:hint=" Enter Name"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrRegistration5"
            android:layout_below="@+id/lnrRegistration4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageViewRegistrationPhone"
                android:layout_width="50dp"
                android:background="@drawable/image_shape"
                android:layout_height="40dp"
                android:padding="12dp"
                app:srcCompat="@drawable/call"
                />

            <EditText
                android:id="@+id/editTextRegistrationPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:hint=" Enter Phone number"
                android:padding="10dp"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrRegistration6"
        android:layout_below="@+id/lnrRegistration5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_shape"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageViewRegistrationId"
            android:layout_width="50dp"
            android:background="@drawable/image_shape"
            android:layout_height="40dp"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_baseline_admin_panel_settings_24"
            />

        <EditText
            android:id="@+id/editTextRegistrationId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:hint=" Enter System ID"
            android:padding="10dp"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrRegistration6">

    <RadioButton
        android:id="@+id/radioButtonRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="I own a security system"
        android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButtonRegistration2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I don't own a security system"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

        <TextView
            android:id="@+id/textViewRegistrationLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupRegistration"
            android:layout_marginLeft="20dp"
            android:text="Back to login"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupRegistration"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/orange"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    </RelativeLayout>